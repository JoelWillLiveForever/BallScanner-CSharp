<UserControl x:Class="BallScanner.MVVM.Views.CalibrateV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BallScanner.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:CalibrateVM />
    </UserControl.DataContext>

    <Border CornerRadius="10,0,0,0"
            Background="{DynamicResource Brush_Surface_Overlay_08dp}">
        
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3150684931506849315068493150685*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left content -->
            <Grid Grid.Column="0"
                  Margin="10,10,5,10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="4.7441860465116279069767441860465*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Image block -->
                <DockPanel Grid.Row="0"
                           Margin="0,0,0,5"
                           LastChildFill="True">

                    <Button DockPanel.Dock="Top"
                            Content="Изображение со сканера"
                            Margin="0,0,0,7"
                            Style="{StaticResource BlockHeaderButtonStyle}" />

                    <DockPanel LastChildFill="True">

                        <DataGrid DockPanel.Dock="Top"
                                  Height="60"
                                  Margin="0,0,0,3.5">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Всего изображений загружено" Width="*" />
                                <DataGridTextColumn Header="Среднее число чёрных пикселей" Width="*" />
                            </DataGrid.Columns>

                        </DataGrid>

                        <Grid Margin="0,3.5,0,0"
                              Background="#ff121212"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">
                            
                            <Image Source="/Resources/1.jpg" />
                            
                        </Grid>

                    </DockPanel>

                </DockPanel>

                <!-- Control block -->
                <Grid Grid.Row="1"
                      Background="GreenYellow"
                      Margin="0,5,0,0">
                    
                    
                    
                </Grid>
                
            </Grid>

            <!-- Right content -->
            <Grid Grid.Column="1"
                  Margin="5,10,10,10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.17899761336515513126491646778043*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Calibrate block -->
                <Grid Grid.Row="0"
                      Margin="0,0,0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Slider block -->
                    <DockPanel Grid.Column="0"
                               Margin="0,0,10,0"
                               LastChildFill="True">

                        <Button DockPanel.Dock="Top"
                                Content="Регулировка чувствительности"
                                Margin="0,0,0,7"
                                Style="{StaticResource BlockHeaderButtonStyle}" />

                        <Grid Background="Aqua">
                            
                        </Grid>
                        
                    </DockPanel>

                    <!-- Separator -->
                    <Grid Grid.Column="1"
                          Background="{DynamicResource Brush_OnBackground_OnSurface_Medium}" />

                    <!-- Threshold block -->
                    <DockPanel Grid.Column="2"
                               Margin="10,0,0,0"
                               LastChildFill="True">

                        <Button DockPanel.Dock="Top"
                                Content="Регулировка пороговых значений"
                                Margin="0,0,0,7"
                                Style="{StaticResource BlockHeaderButtonStyle}" />
                        
                        <Grid Background="Crimson">
                            
                        </Grid>
                        
                    </DockPanel>
                    
                </Grid>

                <!-- Info block -->
                <Grid Grid.Row="1"
                      Margin="0,5,0,0">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="89" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Average values -->
                    <DockPanel Grid.Row="0"
                               Margin="0,0,0,5"
                               LastChildFill="True">

                        <Button DockPanel.Dock="Top"
                                Content="Средние значения"
                                Margin="0,0,0,7"
                                Style="{StaticResource BlockHeaderButtonStyle}" />

                        <DataGrid>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Всего изображений загружено" Width="*" />
                                <DataGridTextColumn Header="Среднее число чёрных пикселей" Width="*" />
                            </DataGrid.Columns>

                        </DataGrid>

                    </DockPanel>

                    <!-- Scan results -->
                    <DockPanel Grid.Row="1"
                               Margin="0,5,0,0"
                               LastChildFill="True">

                        <Button DockPanel.Dock="Top"
                                Content="Результаты сканирования"
                                Margin="0,0,0,7"
                                Style="{StaticResource BlockHeaderButtonStyle}" />

                        <DataGrid>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="№ п/п" Width="*" />
                                <DataGridTextColumn Header="Имя файла" Width="*" />
                                <DataGridTextColumn Header="Кол-во чёрных пикселей" Width="*" />
                                <DataGridTextColumn Header="Сорт" Width="*" />
                            </DataGrid.Columns>
                            
                        </DataGrid>

                    </DockPanel>
                    
                </Grid>
                
            </Grid>
            
        </Grid>
        
    </Border>
</UserControl>
