<UserControl x:Class="BallScanner.MVVM.Views.Main.DocumentsV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:BallScanner.MVVM.ViewModels.Main"
             xmlns:joel="clr-namespace:Joel.Controls;assembly=Joel.Controls"
             xmlns:observers="clr-namespace:Joel.Utils.Observers;assembly=Joel.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Name="Root">

    <Border CornerRadius="10,0,0,0"
            Background="{DynamicResource Brush_Surface_Overlay_08dp}">

        <!-- Content -->
        <DockPanel Margin="10"
                   LastChildFill="True">
            
            <StackPanel DockPanel.Dock="Top"
                        Orientation="Vertical">

                <joel:BlockHeader Text="Поиск по критериям" />

                <Grid Margin="0,7,0,0"
                      Height="29">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="7" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="7" />
                        <ColumnDefinition Width="0.25*" />
                    </Grid.ColumnDefinitions>

                    <ComboBox>
                        <ComboBoxItem IsSelected="True"
                                      Content="Дата" />
                        <ComboBoxItem Content="Фракция" />
                        <ComboBoxItem Content="Номер партии" />
                        <ComboBoxItem Content="Номер смены" />
                        <ComboBoxItem Content="Значение" />
                        <ComboBoxItem Content="Примечание" />
                    </ComboBox>

                    <joel:LabelTextBox Grid.Column="2"
                                       LabelText="Значение критерия"
                                       Style="{StaticResource Style_Inside}" />

                    <Button Grid.Column="4"
                            Name="MySearchButton"
                            Content="Поиск" />

                </Grid>
            </StackPanel>

            <DockPanel Margin="0,10,0,0"
                       LastChildFill="True">

                <joel:BlockHeader DockPanel.Dock="Top"
                                  Text="История сканирований" />

                <!-- Table -->
                <DataGrid Margin="0,7,0,0"
                          IsSynchronizedWithCurrentItem="True"
                          ItemsSource="{Binding ElementName=Root, Path=DataContext.Reports, UpdateSourceTrigger=PropertyChanged}"
                          AutoGenerateColumns="False">

                    <DataGrid.InputBindings>
                        <MouseBinding MouseAction="LeftDoubleClick"
                                      Command="{Binding ElementName=Root, Path=DataContext.OpenDialogWindowCommand}"
                                      CommandParameter="{Binding ElementName=Root, Path=DataContext.Reports/}" />
                    </DataGrid.InputBindings>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№ п/п" 
                                            CellStyle="{StaticResource FirstColumnCell}"
                                            Binding="{Binding _id, UpdateSourceTrigger=PropertyChanged}"
                                            Width="0.5*" />
                        <DataGridTextColumn Header="Дата"
                                            Width="*" 
                                            Binding="{Binding Date, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="Фракция"
                                            Width="*"
                                            Binding="{Binding _fraction, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="Номер партии"
                                            Width="*" 
                                            Binding="{Binding _partia_number, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="Номер смены"
                                            Width="*" 
                                            Binding="{Binding User._smena_number, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="Значение"
                                            Width="*" 
                                            Binding="{Binding _avg_black_pixels_value, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="Примечание"
                                            Width="*" 
                                            Binding="{Binding _note, UpdateSourceTrigger=PropertyChanged}" />
                    </DataGrid.Columns>

                </DataGrid>
            </DockPanel>
        </DockPanel>
    </Border>
</UserControl>
