<Window x:Class="BallScanner.MVVM.Views.MainV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:BallScanner.MVVM.ViewModels"
        WindowStartupLocation="CenterScreen"
        Title="Ball Scanner"
        Height="450"
        Width="800"
        MaxWidth="{Binding SystemParameters.MaximizedPrimaryScreenWidth}"
        MaxHeight="{Binding SystemParameters.MaximizedPrimaryScreenHeight}"
        Style="{StaticResource WindowStyle}">

    <Window.DataContext>
        <vm:MainVM />
    </Window.DataContext>

    <ContentPresenter Content="{Binding CurrentActionVM}" />
</Window>
