                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="True">
                <Setter Property="Background"
                        Value="{DynamicResource Brush_Surface_Overlay_08dp}" />
                <Setter Property="Foreground"
                        Value="{DynamicResource Brush_OnBackground_OnSurface_High}" />
            </Trigger>
            <Trigger Property="IsPressed"
                     Value="True">
                <Setter Property="Background"
                        Value="{DynamicResource Brush_Surface_Overlay_24dp}" />
                <Setter Property="Foreground"
                        Value="{DynamicResource Brush_OnBackground_OnSurface_High}" />
            </Trigger>
            <Trigger Property="IsMinState"
                     Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type local:JustButton}">
                            <Border CornerRadius="{TemplateBinding CornerRadius}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Name="Root">

                                <DockPanel Name="MyDockPanel"
                                           Background="Transparent"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                           Margin="{TemplateBinding Padding}"
                                           LastChildFill="True">

                                    <Viewbox DockPanel.Dock="{TemplateBinding IconPosition}"
                                             Width="{TemplateBinding IconWidth}"
                                             Height="{TemplateBinding IconHeight}"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center">

                                        <Path Name="MyIcon"
                                              Data="{TemplateBinding Icon}"
                                              Fill="{TemplateBinding IconFill}" />

                                    </Viewbox>
                                </DockPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>